<div class="room-posts">
  <h4>登録済みルーム一覧</h4>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>ルーム料金</th>
        <th>登録日</th>                                
      </tr>
    </thead>
      
    <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
        <% if room.room_image != nil %>
          <%= link_to room do %>
            <%= image_tag room.room_image.variant(resize:"100x100^") if room.room_image.attached? %>   
          <% end %>         
        <% else %>
          <p>no image</p>
        <% end %>   
        </td>
        <td class="room_name"><%= link_to room.room_name ,room %></td>
        <td class="room_introducution"><%= room.room_introducution %></td>
        <td class="charge">¥<%= room.charge %></td>
        <td><%= room.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>  
    </tbody>
  </table>
</div>