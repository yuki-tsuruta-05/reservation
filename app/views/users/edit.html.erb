<div class="room">
  <div class="row1">
    <div class="room-nav room-nav-pc">
      <ul>
        <li class="action"><%= link_to "アカウント", user_path(current_user.id) %></li>
        <li class="action"><%= link_to "プロフィール", edit_user_path %></li>  
      </ul>
    </div>

    <div class="room-nav room-nav-mobile">
      <ul>
        <li class="action"><%= link_to "アカウント", user_path(current_user.id) %></li>
        <li class="action"><%= link_to "プロフィール", edit_user_path %></li>        
      </ul>    
    </div>
    <div class="room-view">
      <div class="room-view-box">
        <%= form_with model: @user do |f| %>
          <div class="room-content">
            <div class="row2">
              <h2>プロフィール</h2>            
            </div>
          </div>
          <div class="room-content">
            <div class="row2">
            <% if @user.image != nil %>
              <%= image_tag @user.image.variant(resize:"100x100^") if @user.image.attached? %>         
            <% else %>
              <p>no image</p>
            <% end %>                 
            </div>         
          </div> 

          <div class="room-content">
            <div class="row2">
              <%= f.label :image, "アイコン画像", class:"room-label" %>
              <%= f.file_field :image, autofocus: true, class: "form-control-b"%>           
            </div>   
          </div>  

          <div class="room-content">                     
            <div class="row2">
              <%= f.label :name, "名前", class:"room-label" %>
              <%= f.text_field :name, autofocus: true, class: "form-control-b"%>            
            </div>
          </div>  

          <div class="room-content">            
            <div class="row2">
              <%= f.label :self_introduction, "自己紹介",class:"room-label" %>
              <%= f.text_area :self_introduction, autofocus: true, class: "form-control-b"%>            
            </div>
          </div>

          <div class="room-content">
            <div class="room-registration">
            <%= f.submit "編集", class: "actions btn-login form-control-b" %>
            <%= link_to "戻る", user_path, class: "actions btn-login form-control-b" %>    
            </div>
          </div>                                                   
        <% end %>    
      </div>
    </div>
  </div>  
</div>