
<div class="reservation-confirm-b">
    <div class="reservation-confirm">
      <%= form_with model: @reservation, class:"reservation-inf" do |f| %>
        <h4>予約内容確認</h4>
        <%= f.label :start_day, "開始日",class:"reservation-label" %>
        <%= f.date_field :start_day, readonly: true, class: "form-control-b form-control-c"%>
        <%= f.label :end_day, "終了日",class:"reservation-label" %>
        <%= f.date_field :end_day, readonly: true, class: "form-control-b form-control-c" %>
        <p>使用日数：<%= @number_of_days %></p>
        <%= f.label :number_of_people, "合計人数",class:"reservation-label" %>
        <%= f.number_field :number_of_people, readonly: true, class: "form-control-b form-control-c", value: @reservation.number_of_people %>        
        <%= f.label :total_charge, "合計金額",class:"reservation-label" %>
        <%= f.number_field :total_charge, readonly: true, class: "form-control-b form-control-c", value: @reservation.total_charge %>
        <p class="phrase2">上記内容でよろしければ<br>”予約確定”のボタンを押してください</p>
        <%= f.submit "予約確定", class: 'btn btn-login'%>
        <%= f.hidden_field :room_id %>
        <%= link_to "予約情報を変更する", :back %>
      <% end %>
    </div>
</div>  
